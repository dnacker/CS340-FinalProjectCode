<h1>Update {{problem.name}}</h1>
<form id="update-problem" action="/problems" method="post">
    Name: <input type="text" name="name" value="{{problem.name}}" required><br>
    Difficulty: <input type="number" name="difficulty" value="{{problem.difficulty}}" required><br>
    Styles: 
    {{#each styles}}
    {{name}}: <input type="checkbox" value="{{id}}" name="styles" {{#if checked}}checked{{/if}}><br>
    {{/each}}
    Zone: <select name="zoneid">
        {{#each zones}}
        <option value="{{id}}" {{#if selected}}selected{{/if}}>{{name}}</option>
        {{/each}}
    </select><br>
</form>
<button onclick="updateProblem({{problem.id}})">Update</button>
<script>
$(document).ready(function() {
    $("#problems-link").addClass("active");
});
</script>